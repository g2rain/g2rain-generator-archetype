<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  此文件包含 archetype 发布到 Maven Central 所需的配置片段
  在 release.yml 中会自动合并到生成的 archetype pom.xml
-->
<fragment>
  <!-- 更新项目元信息 -->
  <name>G2Rain Generator Archetype</name>
  <description>A multi-module Maven Archetype project template based on Spring Boot. Use mvn archetype:create-from-project to create g2rain-generator-archetype, for quickly generating standardized enterprise-level Java application project structures.</description>
  <url>https://github.com/g2rain/g2rain-generator-archetype</url>
  
  <!-- Organization 配置 -->
  <organization>
    <name>G2rain</name>
    <url>http://www.g2rain.com/</url>
  </organization>
  
  <!-- SCM 配置 -->
  <scm>
    <url>https://github.com/g2rain/g2rain-generator-archetype</url>
    <connection>scm:git:https://github.com/g2rain/g2rain-generator-archetype.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/g2rain/g2rain-generator-archetype.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  
  <!-- 开发者信息 -->
  <developers>
    <developer>
      <name>Jagger</name>
      <email>g2rain_developer@163.com</email>
      <organization>G2rain</organization>
      <organizationUrl>http://www.g2rain.com/</organizationUrl>
    </developer>
    <developer>
      <id>alpha</id>
      <name>Alpha</name>
      <organization>G2rain</organization>
      <organizationUrl>http://www.g2rain.com/</organizationUrl>
    </developer>
  </developers>
  
  <!-- License 配置 -->
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <!-- 仓库配置 -->
  <distributionManagement>
    <!-- Snapshot 仓库配置 -->
    <snapshotRepository>
      <id>central</id>
      <url>https://central.sonatype.com/content/repositories/snapshots</url>
    </snapshotRepository>
    <!-- Release 仓库由 central-publishing-maven-plugin 自动处理，无需配置 -->
  </distributionManagement>
  
  <!-- Properties: 发布相关插件版本 -->
  <properties>
    <maven.source.plugin.version>3.3.1</maven.source.plugin.version>
    <maven.javadoc.plugin.version>3.12.0</maven.javadoc.plugin.version>
    <maven.gpg.plugin.version>3.2.7</maven.gpg.plugin.version>
    <central.publishing.maven.plugin.version>0.9.0</central.publishing.maven.plugin.version>
    <maven.compiler.target>21</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <!-- Build 配置: 添加源码和 Javadoc 插件 -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>${maven.source.plugin.version}</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>${maven.javadoc.plugin.version}</version>
        <configuration>
          <release>${maven.compiler.target}</release>
          <encoding>${project.build.sourceEncoding}</encoding>
          <doclint>none</doclint>
          <additionalJOption>-Xdoclint:none</additionalJOption>
        </configuration>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
  <!-- Release Profile: GPG 签名和 Central Publishing -->
  <profiles>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <!-- GPG 签名插件：生成已签名的 jar / pom -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>3.2.7</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
                <configuration>
                  <gpgArguments>
                    <arg>--batch</arg>
                    <arg>--pinentry-mode</arg>
                    <arg>loopback</arg>
                  </gpgArguments>
                  <passphrase>${env.MAVEN_GPG_PASSPHRASE}</passphrase>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <!-- Central Publishing Maven Plugin：使用新的 Central Publisher Portal -->
          <!-- 参考文档：https://central.sonatype.org/publish/publish-portal-maven/ -->
          <plugin>
            <groupId>org.sonatype.central</groupId>
            <artifactId>central-publishing-maven-plugin</artifactId>
            <version>${central.publishing.maven.plugin.version}</version>
            <extensions>true</extensions>
            <configuration>
              <publishingServerId>central</publishingServerId>
              <!-- 自动发布，无需手动干预（适合 CI 构建） -->
              <autoPublish>true</autoPublish>
              <!-- 等待直到发布完成 -->
              <waitUntil>published</waitUntil>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</fragment>

